<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="331dp"
    android:layout_height="254dp"
    android:background="@drawable/keyboard_bg_style"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="11dp"
            android:layout_height="9dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/lock_pwd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码验证"
            android:layout_marginLeft="5dp"
            android:textColor="#177bf6"
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:background="@null"
            android:layout_marginTop="4dp"
            android:id="@+id/password"
            android:text=""
            android:maxLength="6"
            android:enabled="false"
            android:textColor="#000000"
            android:digits="1234567890."
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn3"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="3"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn4"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="3dp"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn5"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn6"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="6"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn7"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="3dp"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn8"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn9"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="9"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn_del"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="3dp"
            android:text="退格"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn0"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn_conf"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="确定"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>